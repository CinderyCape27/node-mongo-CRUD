<% include partials/header %>
<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id%>" method="POST">
                        <!-- method="" indica el metodo de comunicaciÃ³n con el server -->
                        <div class="form-group">
                            <input type="text" name="title" value="<%= task.title%>" placeholder="Insert a title"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="80" rows="" class="form-control"
                                placeholder=" Insert a description"><%= task.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Actualizar
                        </button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


