<% include partials/header %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5"></div>
        <div class="card">
            <div class="card-body">
                <form action="/add" method="POST"> <!-- method="" indica el metodo de comunicación con el server -->
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Insert a title" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" cols="80" rows="" class="form-control"
                            placeholder=" Insert a description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Add
                    </button>
                </form>
            </div>
        </div>

        <!-- LIST -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <!-- Cabecera de la tabla -->

                <head>
                    <!-- tr es una fila -->
                    <tr>
                        <!-- cabeceras de la tabla -->
                        <th>N°</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </head>
                <!-- Cuerpo o contenido de la tabla -->
                <body>
                    <!-- por cada tarea que recorra -->
                    <% for(let i = 0; i < tasks.length; i++) {%>
                        <!-- Se agregaran como columnas segun el td corresponda -->
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= tasks[i].title %></td>
                                <td><%= tasks[i].description %></td>
                                <td> 
                                    <a href="/turn/<%= tasks[i]._id%>" class=" btn btn-dark"> Hecho</a>
                                    <a href="/delete/<%= tasks[i]._id%>" class=" btn btn-danger"> Delete</a>
                                    <a href="" class=" btn btn-info" style="margin: 5px"> Update</a>
                                </td>

                            </tr>
                    <% } %>
                </body>
            </table>
        </div>

    </div>

</div>

<% include partials/footer %>