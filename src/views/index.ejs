                    <div class="form-group">
                        <input type="text" name="titulo" value="" placeholder="Insert a title" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" cols="80" rows="" class="form-control"
                            placeholder=" Insert a description"></textarea>
                    </div>
